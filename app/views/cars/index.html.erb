<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.vin %></td>
        <td><%= link_to 'Show', car, :class => "button btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_car_path(car), :class => "button btn btn-warning" %></td>
        <td><%= link_to 'Destroy', car, :class => "button btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path, :class => "button btn btn-info"  %>
<%= link_to 'Home', root_path, :class => "button btn btn-info"  %>

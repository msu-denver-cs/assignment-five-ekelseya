<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<h2>Search by Part:</h2>
<%= form_tag(search_page_path, :method => "get",
             class: 'form-inline') do %>
  <div class="input-group">
    <%= search_field_tag 'search', params[:search], placeholder: "Search Parts", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
    </div>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Factory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.name %></td>
        <td><%= part.quantity %></td>
        <td><%= part.factory.name %></td>
        <td><%= link_to 'Show', part, :class => "button btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_part_path(part), :class => "button btn btn-warning"   %></td>
        <td><%= link_to 'Destroy', part, :class => "button btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Part', new_part_path, :class => "button btn btn-info"  %>
<%= link_to 'Home', root_path, :class => "button btn btn-info"  %>
